<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Fecha</th>
            <th>Paciente</th>
            <th>Especialidad</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for citum in citas %}
        <tr>
            <td>{{ citum.id }}</td>
            <td>{{ citum.paciente.nombre }}</td>
            <td>{{ citum.especialidad.nombre }}</td>
            <td>{{ citum.fecha ? citum.fecha|date('d-m-Y') : '' }}</td>
            <td>
                <a class="btn btn-secondary btn-sm"  href="{{ path('cita_show', {'id': citum.id}) }}">show</a>
                <a class="btn btn-secondary btn-sm"  href="{{ path('cita_edit', {'id': citum.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">No hay registros encontrados</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
