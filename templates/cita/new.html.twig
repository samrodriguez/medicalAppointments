{% extends 'layout.html.twig' %}
{% block title %}Nueva Cita{% endblock %}
{% block body%}
<div class="row">
    <div class="col-sm-10 offset-1">
        <div class="card">
            {{ form_start(form) }}
            <div class="card-header">
                <a class="btn btn-secondary" href="{{ path('app_menu') }}">Menu Principal</a> |
                Nueva Cita </div>
            <div class="card-body">
                <h5 class="card-title text-center">Porfavor complete la informacion</h5>
                <p class="card-text">Campos oblicatorios * </p>
                <div class="row">
                    <div class="col-sm-12">
                        {{ include('cita/_form.html.twig') }}
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary">{{ button_label|default('Guardar') }}</button>
                <a class="btn btn-secondary" href="{{ path('cita_index') }}">Regresar al listado</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
